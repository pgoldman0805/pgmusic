<div class="container text-center">
  <h1>Booking TEST</h1>
  <div id="row">
    <div class="col-md-6">
      <div class="well">
        <%= form_for "/contacts" do |f| %>
  
          <div class="form-group">
            <%= f.label ("First Name") %>
            <%= f.text_field :fname %>
          </div>
          <div class="form-group">
            <%= f.label ("last Name") %>
            <%= f.text_field :lname %>
          </div>
          <div class="form-group">
            <%= f.label ("Phone Number") %>
            <%= f.text_field :phone %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
          <div class="form-group">
            <%= f.label :company %>
            <%= f.text_field :company %>
          </div>
          <div class="form-group">
            <%= f.label :Type %>
            <%= select_tag(:type, options_for_select([['Wedding',1],['Bar/Bat Mitzvah',2],['Corporate Event',3]])) %>
          </div>
          
          
          <div class="form-group">
            <%= f.label :details %>
            <%= f.text_area :details %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit", class:'btn btn-default btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>