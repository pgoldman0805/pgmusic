<div class="container">
  <div class="row">
    <h1 class="text-center">Contact Paul</h1>
    <div class="col-md-8 col-md-offset-2">
      <div class="well text-center">
        <div class="row">
          <div class="col-md-6">
           
            <p><span class="glyphicon glyphicon-phone"></span>Phone: 847-791-0512</p>
            <p><span class="glyphicon glyphicon-envelope"></span>Email: info@paulgoldmanmusic.com</p> 
          </div>
          <div class="col-md-6">
              <%= form_for @contacts do |f| %>
                <div class="form-group">
                  <%= f.label :name%>
                  <%= f.text_field :name, class:'form-control' %>
                <div class="form-group">
                  <%= f.label :email%>
                  <%= f.text_field :email, class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :comments%>
                  <%= f.text_area :comments, style: 'max-width:100%', class:'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.submit "Submit", class:'btn btn-default' %>
                </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>    
</div>